@model ticketing_system.ViewModels.Tickets.SearchTicketViewModel;

<div class="container p-2">
    <div class="form-container">
        <form asp-action="SearchTicket" asp-controller="Ticket" method="post"> 

            <div class="form-group">
                <label asp-for="TicketId" class="form-label"></label>
                <input type="text" asp-for="TicketId" class="form-control" placeholder="Enter ticket type: " />
            </div>

            <div class="form-group">
                <label asp-for="CreatedBy" class="form-label"></label>
                <input type="text" asp-for="CreatedBy" class="form-control" placeholder="Enter creator: " />
            </div>

            <div class="form-group">
                <label asp-for="CreationDate" class="form-label"></label>
                <input type="date" asp-for="CreationDate" class="form-control" placeholder="Enter date: " />
            </div>

            <div class="form-group">
                <label asp-for="TicketTypes" class="form-label">Ticket Type</label>
                <select asp-for="SelectedTicketTypeId" class="form-select">
                    <option value="">Select ticket type</option>
                    @foreach (var ticketType in Model.TicketTypes)
                    {
                        <option value="@ticketType.Value">@ticketType.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="FinishingDate" class="form-label"></label>
                <input type="date" asp-for="FinishingDate" class="form-control" placeholder="Enter finishing date: " />
            </div>

            <div class="form-group">
                <label asp-for="Executor" class="form-label"></label>
                <input type="text" asp-for="Executor" class="form-control" placeholder="Enter executor: " />
            </div>

            <div class="form-group">
                <label asp-for="Groups" class="form-label">Groups</label>
                <select asp-for="SelectedGroupId" class="form-select">
                    <option value="">Select group</option>
                    @foreach (var group in Model.Groups)
                    {
                        <option value="@group.Value">@group.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-submit" />
            </div>

        </form>
    </div>
</div>