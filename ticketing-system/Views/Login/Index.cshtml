@model ticketing_system.ViewModels.Auth.LoginViewModel;

<style>
    .login-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        padding: 1rem;
    }

    .form-div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
        max-width: 400px;
        min-width: 300px;
        height: auto;
        min-height: 400px;
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        padding: 25px;
        border: 2px solid white;
        border-radius: 25px;
        margin-top: 2rem;
    }

    .info-div {
        width: 100%;
        max-width: 500px;
        padding: 1rem;
        margin-top: 2rem;
    }

    .info-text {
        font-size: 1.3rem; /* Increased from default */
        line-height: 1.6;
    }

    .contact-info {
        font-size: 1.1rem; /* Slightly larger than regular text */
    }

    .my-input {
        background-color: rgba(255, 255, 255, 0.05);
        border: 2px solid white;
        border-radius: 10px;
        backdrop-filter: blur(10px);
        color: wheat;
    }

    .btn {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
    }

    .pass-change-a {
        font-size: 1rem;
        display: block;
        text-align: center;
        margin-top: 1rem;
    }

    .err-msg {
        height: 35px;
        font-size: 0.9rem;
    }

    .remember-me-container {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 1rem 0;
    }

        .remember-me-container label {
            margin-bottom: 0;
        }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .login-container {
            flex-direction: column;
            align-items: center;
        }

        .info-div {
            order: -1;
            margin-top: 1rem;
        }

        .form-div {
            margin-top: 1rem;
        }
    }

    @@media (max-width: 768px) {
        .form-div {
            width: 90%;
            padding: 20px;
        }

        .info-div {
            width: 90%;
        }

        .info-text {
            font-size: 1.1rem;
        }

        .contact-info {
            font-size: 1rem;
        }
    }

    @@media (max-width: 480px) {
        .form-div {
            padding: 15px;
        }

        .btn, .my-input {
            font-size: 0.9rem;
        }

        .remember-me-container {
            font-size: 0.9rem;
        }

        .info-text {
            font-size: 1rem;
        }

        .contact-info {
            font-size: 0.95rem;
        }
    }
</style>

<div class="login-container">
    <div class="form-div">
        <div class="text-center">
            <h2 class="text-white-50">Login</h2>
        </div>
        <form asp-action="Login" asp-controller="Login" method="post">
            <div class="form-group p-2">
                <label asp-for="Username" class="text-light p-1"></label>
                <input asp-for="Username" class="form-control my-input" placeholder="Enter username:" />
                <span asp-validation-for="Username" class="text-warning err-msg"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Password" class="text-light p-1"></label>
                <input asp-for="Password" class="form-control my-input" placeholder="Enter password:" type="password" />
                <span asp-validation-for="Password" class="text-warning err-msg"></span>
            </div>
            <div class="remember-me-container p-2">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label text-light"></label>
            </div>
            <div class="text-center mt-3 d-grid p-2">
                <input type="submit" class="btn btn-outline-light" value="Login" />
            </div>
        </form>
        <a href="@Url.Action("Index", "ChangePass")" class="pass-change-a">Change password?</a>
    </div>

    <div class="info-div">
        <p class="text-light info-text">
            This application enables you to keep records for all bugs and problems in your system/company.
            Users can be admins or basic users. Admins can manage the system, while basic users can open,
            close, and update incidents.
        </p>
        <br />
        <p class="text-light contact-info">
            - Get in touch -<br>
            Phone number: +381 62 333221<br>
            Email address: info@ticketingsystem.com
        </p>
    </div>
</div>